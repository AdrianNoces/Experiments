<Button>
    
    size_hint: (0.2, 0.2)

    background_normal: ' '
    
    background_color: (2/2500, 10/255, 24/255, 1)


<calculatorwidget>

    BoxLayout
        
        orientation: "vertical"
        
        size: root.width, root.height
        
        border: 30,30,30,30
        
        
        
        
        TextInput:
            
            id: input_box
            
            foreground_color: (1, 1, 1, 1)
            
            background_color: (0, 0, 0, 1)
            
            text: "0"
            
            font_size: 43
            
            multiline: False

            halign: "right"
            
            
            


            
        GridLayout:
            
            cols: 4
            
            rows: 5
            
                     
         #### row1 ###
                                                
            Button:
                
                text: "%"
                
                font_size: 32
                
                on_press: root.signs("%")
            
            Button:
                
                text: "C"
                
                font_size: 32
                
                on_press: root.clear()
                
                            
            Button:
                
                text: U"\u00AB"
                
                font_size: 32                            
                
                on_press: root.r_l()
                
                                        
            Button:
                
                text: "รท"
                
                font_size: 32   
                
                background_color: (200/255, 20/255, 155/255, 1)
                
                on_press: root.signs("/")
                
                                                                                                    
                   ### row 2 ####   
                   
            Button:
                
                text: "7"
                
                font_size: 32
                
                on_press: root.number_value(7)
            
            Button:
                
                text: "8"
                
                font_size: 32
                
                on_press: root.number_value(8)
                
                            
            Button:
                
                text: "9"
                
                font_size: 32 
                
                on_press: root.number_value(8)
                

                                        
            Button:
                
                text: "ร"
                
                font_size: 32
                
                background_color: (200/255, 20/255, 155/255, 1)
                on_press: root.signs("*")
                
                
                
                
                ### row 3 ###
                
            Button:
                
                text: "4"
                
                font_size: 32
                
                on_press: root.number_value(4)
            
            Button:
                
                text: "5"
                
                font_size: 32
                
                                                          
                on_press: root.number_value(5)
                
                            
            Button:
                
                text: "6"
                
                font_size: 32 
                
                on_press: root.number_value(6) 
               

                                        
            Button:
                
                text: "-"
                
                font_size: 32
                
                background_color: (200/255, 20/255, 155/255, 1)
                
                on_press: root.signs("-")
                
                
                
                                                                                                                          ### row 4 ###
                                                                                                                          
            Button:
                
                text: "1"
                
                font_size: 32
                
                on_press: root.number_value(1)
            
            Button:
                
                text: "2"
                
                font_size: 32
                
                on_press: root.number_value(2)
                            
            Button:
                
                text: "3"
                
                font_size: 32  
                
                on_press: root.number_value(3)

                                        
            Button:
                
                text: "+"
                
                font_size: 32                                    
                
                background_color: (200/255, 20/255, 155/255, 1)
                
                on_press: root.signs("+")
                
    
                                                                                                    
       ### row 5 ###
            Button:
                
                text: "+/-"
                
                font_size: 32
                
                on_press: root.positive_n()
            
            Button:
                
                text: "0"
                
                font_size: 32
                
                on_press: root.number_value(0)
                
                            
            Button:
                
                text: "."
                
                font_size: 32                            
                
                on_press: root.dot()
                
                                        
            Button:
                
                text: "="
                
                font_size: 32
                
                background_color: (100/255, 100/255, 255/255, 1)
                
                on_press: root.result()
                
                
   
      
      