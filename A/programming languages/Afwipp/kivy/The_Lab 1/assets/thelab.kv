<WidgetsExample>:
	cols: 3
	ToggleButton:
	    text: "OFF"
	    on_press: root.toggle_button_states(self)
	    size_hint: .5, .5

	    
	Button:
	    text: "count"
	    on_press: root.ClickOnButton()
	    size: "48dp", "48dp"
	    size_hint: 1, 1
	    disabled: not root.count_enabled
    Label:
        text: root.my_text
        font_name: "fonts/kizari.ttf"
        font_size: "12dp"
        color: 1, .5, 1, 1
    Switch:
        id: my_switch
        on_active: root.on_active_switch(self)
        size_hint: .5, .5
	    width: "100dp"
	    active: True
    Slider:
        id: my_slider
        min: 0
        max: 100
        value: 50
        on_value: root.on_slider_value(self)
        disabled: not my_switch.active
    BoxLayout:
        orientation: "vertical"
        Label:
            text: str(int(my_slider.value))
        ProgressBar:
            max: 100
            value: my_slider.value
    TextInput:
        id: Text_input
        size_hint: .5, .5
	    width: "100dp"
	    multiline: False
        on_text_validate: root.on_text_validate(self)
    Label:
        text:"your name is:" +  root.Text_input_str
        
